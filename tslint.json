{
  "extends": "tslint:recommended",
  "rulesDirectory": ["codelyzer", "node_modules/@nrwl/workspace/src/tslint"],
  "rules": {
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warning"
    },
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, 140],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-empty": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "component-class-suffix": true,
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    //-----------------------
    // Codelyzer
    //-----------------------
    "prefer-on-push-component-change-detection": true,
    "use-component-view-encapsulation": true,
    "template-cyclomatic-complexity": [true, 5],
    "template-no-any": true,
    //-----------------------
    // Nx Rules
    // Ref: https://github.com/aiao-io/aiao/blob/master/nx.json
    //-----------------------
    "nx-enforce-module-boundaries": [
      true,
      {
        "allow": ["@yeti/core"],
        "depConstraints": [
          {
            "sourceTag": "all",
            "onlyDependOnLibsWithTags": ["all"]
          },
          {
            "sourceTag": "universal-lib",
            "onlyDependOnLibsWithTags": ["*"]
          },
          {
            "sourceTag": "angular-lib",
            "onlyDependOnLibsWithTags": ["all", "angular-lib"]
          },
          {
            "sourceTag": "angular-app",
            "onlyDependOnLibsWithTags": ["all", "angular-lib", "universal-lib"]
          },
          {
            "sourceTag": "nest-lib",
            "onlyDependOnLibsWithTags": ["all", "nest-lib", "universal-lib"]
          },
          {
            "sourceTag": "nest-app",
            "onlyDependOnLibsWithTags": ["all", "nest-lib"]
          },
          {
            "sourceTag": "angular-e2e",
            "onlyDependOnLibsWithTags": ["all", "angular-app"]
          },
          {
            "sourceTag": "scope:public",
            "onlyDependOnLibsWithTags": ["scope:public"]
          },
          {
            "sourceTag": "module:core",
            "onlyDependOnLibsWithTags": ["module:utils"]
          },
          {
            "sourceTag": "module:shared",
            "onlyDependOnLibsWithTags": ["module:shared"]
          },
          {
            "sourceTag": "module:child",
            "onlyDependOnLibsWithTags": ["module:shared"]
          },
          {
            "sourceTag": "module:admin",
            "onlyDependOnLibsWithTags": ["module:shared", "module:core", "module:admin"]
          },
          {
            "sourceTag": "module:entry",
            "onlyDependOnLibsWithTags": ["module:shared", "module:core"]
          },
          {
            "sourceTag": "*",
            "onlyDependOnLibsWithTags": ["*"]
          }
        ],
        "enforceBuildableLibDependency": true
      }
    ]
  }
}
